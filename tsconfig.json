{
       "esModuleInterop": true,
        "compilerOptions": {
        "module": "commonjs",
        "moduleResolution": "node",
        "pretty": true,
        "sourceMap": true,
        "target": "es2017",
        "outDir": "./dist",
        "baseUrl": "./",
        "lib": ["es6"],
        "resolveJsonModule": true,
        "types": ["node"],
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "esModuleInterop": true
    },
    "compileOnSave": true,
    "include": [
        "/**/*.ts",
    ],
    "exclude": [
        "node_modules",
        "!node_modules/@types",
         "./dist"
    ]
}

  